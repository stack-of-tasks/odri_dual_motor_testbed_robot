<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="odri_dual_motor_testbed_wheel" params="name parent prefix reflect">

    <joint name="${name}_${prefix}_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${name}_${prefix}_3_link" />
      <origin xyz="${reflect * 0.065} 0.0 0.03" rpy ="0.0 0.0 0.0"/>
      <axis xyz="0 0 1" />
      <limit effort="30" velocity="1.0" lower="-3.14" upper="3.14" />
    </joint>

    <link name="${name}_${prefix}_3_link">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.00000 0.00000 0.00000"/>
        <mass value="0.050"/>
        <inertia ixx="0.002471" ixy="-0.001809" ixz="-0.001202"
                 iyy="0.006132" iyz="0.000494"
                 izz="0.006704"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://odri_dual_motor_testbed_description/meshes/encoder_code_wheel_mount_v2.stl" />
        </geometry>
        <material name="white">
          <color rgba="1.0 1.0 1.0 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://odri_dual_motor_testbed_description/meshes/encoder_code_wheel_mount_v2.stl" />
        </geometry>
      </collision>
    </link>
    
    <joint name="${name}_${prefix}_4_joint" type="fixed">
      <parent link="${name}_${prefix}_3_link" />
      <child link="${name}_${prefix}_4_link" />
      <origin xyz="0.0 0.0 0.01" rpy ="0.0 0.0 0.0"/>
      <axis xyz="0 0 1" />
    </joint>
    
    <link name="${name}_${prefix}_4_link">
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.00000 0.00000 0.00000"/>
        <mass value="0.050"/>
        <inertia ixx="0.002471" ixy="-0.001809" ixz="-0.001202"
                 iyy="0.006132" iyz="0.000494"
                 izz="0.006704"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://odri_dual_motor_testbed_description/meshes/hand_wheel_v2.stl" />
        </geometry>
        <material name="white">
          <color rgba="1.0 1.0 1.0 1.0"/>
        </material>

      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://odri_dual_motor_testbed_description/meshes/hand_wheel_v2.stl" />
        </geometry>
      </collision>
    </link>
    
  </xacro:macro>
</robot>
